@using ETKINLIK_SITESI.Models

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETKINLIK_SITESI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ETKINLIK_SITESI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-text"> <font size="6" color="pink" face="Roboto"> ETKİNLİK.COM </font> </a>
                <button class="navbar-toggler"
                        type="button"
                        data-mdb-toggle="collapse"
                        data-mdb-target="#navbarText"
                        aria-controls="navbarText"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                &emsp;&emsp;
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/Kullanici/Index/">ANASAYFA</a>
                        </li>

                        &emsp;&emsp;
                        <li class="nav-item">
                            <a class="nav-link" href="/Kullanici/etkinliklerim/">ETKİNLİKLERİM</a>
                        </li>
                        &emsp;&emsp;
                        <li class="nav-item">
                            <a class="nav-link" href="/Kullanici/EtkinlikOlustur/">ETKİNLİK OLUŞTUR</a>
                        </li>

                    </ul>
                    &emsp;&emsp;
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item">
                            <a class="nav-link " href="/Kullanici/profil/">PROFİL</a>
                        </li>
                        
                    </ul>
                    <p>&nbsp;&nbsp;&nbsp;&nbsp;</p>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Kullanici" asp-action="Cikis">ÇIKIŞ</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
        <br />
        <br />
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts",false)
</body>
</html>
