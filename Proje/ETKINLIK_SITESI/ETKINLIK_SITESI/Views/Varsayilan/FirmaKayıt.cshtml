@model Firmalar
@{
    ViewData["Title"] = "FirmaKayıt";
    Layout = "~/Views/Shared/_VarsayilanLayout.cshtml";
}

<header>
    <div align="center">
        <p>
            <font face="tahoma" size="5" color="maroon">
                <b>ÜYE KAYIT SAYFASINA HOŞGELDİN</b>
                <br />

            </font>
        </p>
    </div>

</header>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FirmaKayıt" asp-controller="Varsayilan" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>FirmaAdı  </label>
                <input asp-for="FirmaAdı" class="form-control" />
                <span asp-validation-for="FirmaAdı" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label>WebSite Adresiniz </label>
                <input asp-for="WebSite" class="form-control" />
                <span asp-validation-for="WebSite" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label>Mail </label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label>Şifre</label>
                <input asp-for="Sifre" class="form-control" type="password" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label>Şifre Tekrar</label>
                <input asp-for="SifreT" class="form-control" type="password" />
                <span asp-validation-for="SifreT" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" id="kayıt1" name=" kayıt1" value="Kayıt Ol" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @if (ViewBag.Message != null)
    {
        <script>
            $(function () {
                alert("@ViewBag.Message")
            });
        </script>
    }

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }




